# vim: filetype=dosini

# General keybinds
    keybind = clear
    keybind = alt+comma=reload_config
    keybind = alt+period=clear_screen
    keybind = ctrl+shift+c=copy_to_clipboard
    keybind = ctrl+shift+v=paste_from_clipboard

# Font keybinds
    keybind = alt+equal=increase_font_size:1
    keybind = alt+minus=decrease_font_size:1
    keybind = alt+zero=reset_font_size

# Surface keybinds
    # Close current split -> tab -> window
        keybind = alt+q=close_surface

    # Split keybinds
        keybind = alt+shift+h=new_split:left
        keybind = alt+shift+j=new_split:down
        keybind = alt+shift+k=new_split:up
        keybind = alt+shift+l=new_split:right

        keybind = alt+left=resize_split:left,20
        keybind = alt+down=resize_split:down,20
        keybind = alt+up=resize_split:up,20
        keybind = alt+right=resize_split:right,20
        keybind = alt+enter=equalize_splits

        keybind = alt+h=goto_split:left
        keybind = alt+j=goto_split:bottom
        keybind = alt+k=goto_split:top
        keybind = alt+l=goto_split:right

    # Tab keybinds
        keybind = alt+t=new_tab
        keybind = alt+n=next_tab
        keybind = alt+p=previous_tab
