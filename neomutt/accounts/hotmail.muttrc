# vim: ft=neomuttrc
source "$XDG_CONFIG_HOME/neomutt/credentials/hotmail.creds"

set folder = "imaps://outlook.office365.com/"

set spool_file = +Inbox
set record = +Sent
set postponed = +Drafts
set trash = +Deleted

set header_cache = $XDG_CACHE_HOME/neomutt/hotmail/header
set message_cache_dir = $XDG_CACHE_HOME/neomutt/hotmail/message
